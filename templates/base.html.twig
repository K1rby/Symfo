<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
 <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
          <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
          <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        {% block stylesheets %}{% endblock %}
        <style>
        nav {
          background-color: #94A0D4;
          opacity:0.75;
        }
        </style>
    </head>
    <body>
      <nav>
         <div class="nav-wrapper">
           <a href="{{ path("home")}}"  class="brand-logo">Air Atlantique</a>
           <ul id="nav-mobile" class="right hide-on-med-and-down">
             {% if is_granted('ROLE_USER') %}
             <li>
               <a href="{{ path("member")}}" class="waves-effect waves-light btn pink darken-1 modal-trigger">Mon Compte
                 <i class="material-icons left">person</i>
               </a>
             </li>
             {% endif %}
             {% if is_granted('ROLE_USER') %}
             <li>
               <a href="{{ path("app_logout")}}" class="waves-effect waves-light btn pink darken-1 modal-trigger">DÃ©connexion
                 <i class="material-icons left">exit_to_app</i>
               </a>
             </li>
             {% else %}
             <li>
               <a href="{{ path("app_login")}}" class="waves-effect waves-light btn pink darken-1 modal-trigger">Connexion
                 <i class="material-icons left">assignment_ind</i>
               </a>
             </li>
             {% endif %}
           </ul>
         </div>
       </nav>
        <div class="background">
  <div class="container">
        {% block body %}{% endblock %}
      </div>
        {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
